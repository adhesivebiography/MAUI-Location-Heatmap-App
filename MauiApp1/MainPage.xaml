<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="MauiApp1.MainPage"
             Title="MainView">

    <Grid RowDefinitions="Auto,*" Padding="12" RowSpacing="10">

        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Label Text="Location Tracker"
                   FontSize="22"
                   HorizontalOptions="Center" />

            <Button Text="Start Tracking" Clicked="OnStartTrackingClicked"/>
            <Button Text="Stop Tracking" Clicked="OnStopTrackingClicked"/>
            <Button Text="Show Saved Points" Clicked="OnShowSavedPointsClicked"/>
        </VerticalStackLayout>

        <maps:Map x:Name="MainMap"
                  Grid.Row="1"
                  MapType="Street"
                  IsShowingUser="True" />

    </Grid>
</ContentPage>
